<% include partials/header %>
<div class="fluid-container" style="background-image:url(/images/bg.jpg); background-size:100% 100%;height:100%;">
<div class="container" style="padding-top:5%; margin-bottom:5%; width:100%;">
  <% Object.values(errors).forEach(function(error){ %>
    <div class="alert alert-danger" style="padding:0px">
      <p style = "color: black; margin-left: 10px;  margin-top:5px;"><%= error.msg%></p>
    </div>
      <% });%>
      <div class="container" style="margin-top:10%; margin-bottom:5%; width:100%;">
     <form method = "POST" action = '/users/login' style="margin-top: 60px; width:100%; padding-left:20%;padding-right:20%;">
       <div class = "form-group">
         <label for="email" style="color:white; font-size: 30px; color: #990000; font-weight: bold;">Email</label>
         <input type = "email"  name = "email" class="form-control" placeholder = "Enter your registered email.." id="email">
       </div>
       <div class = "form-group">
         <label for="pass1"  style="color:white;font-size: 30px; color: #990000; font-weight: bold;">Password</label>
         <input type = "password"  name = "password"  class="form-control" placeholder = "Enter your password" id="pass1">
       </div>
      <div class="button2" style="padding-bottom: 50px;"> <button type="submit" class="btn btn-lg btn-block btn-danger" style="margin-top:45px; color:floralwhite; font-weight: bold;"> <span> LOGIN </span> </button> </div>
     </form>
   </div>
</div>
<% include partials/footer %>
