<% include partials/header %>
<div class="fluid-container" style="background-image:url(/images/together.jpg); background-size:100% 100%;">
<div class="container" style="padding-top:5%; margin-bottom:5%; width:100%;">
  <% Object.values(errors).forEach(function(error){ %>
    <div class="alert alert-danger" style="padding:0px">
      <p style = "color: black; margin-left: 10px;  margin-top:5px;"><%= error.msg%></p>
    </div>
      <% });%>
      <div class="container" style="margin-top:10%; margin-bottom:5%; width:100%;">
     <form class= "otp-verify" method = "POST" action = '/users/otpverify' style="margin-top: 60px; width:100%; padding-left:20%;padding-right:20%;">
       <div class = "form-group">
         <label for="email" style="color:white; font-size: 20px;	font-family: Baskerville,Baskerville Old Face,Hoefler Text,Garamond,Times New Roman,serif; color: white; font-weight: bold;">EMAIL</label>
         <input type = "email"  name = "email" class="form-control" value="<%=email%>" placeholder = "Enter your registered email.." id="email">
       </div>
       <div class = "form-group otpfield">
         <label for="otp"  style="color:white;font-size: 20px;	font-family: Baskerville,Baskerville Old Face,Hoefler Text,Garamond,Times New Roman,serif; color: white; font-weight: bold;">ONE TIME PASSWORD(OTP)</label>
         <input type = "tel"  name = "otp"  class="form-control" placeholder = "Enter OTP here send to above email address.." id="otp">
       </div>
       <div class="otp-timer" style="	font-family: Cambria,Georgia,serif;"></div>
       <script>
         var i = 180;
         var timeout = setInterval(()=>{

           document.querySelector('.otp-timer').textContent = "OTP will expire in "+ i + "s";
            i--;
            if(i == -1){
              clearInterval(timeout);
              document.querySelector('.otpfield').style.display = "none";
              document.querySelector('.otp-timer').style.display = "none";
              document.querySelector('.button2').style.display = "none";
              document.querySelector('.resend-otp').style.display = "block";
            }
         },1000);
       </script>
      <div class="button2"> <button type="submit" class="btn btn-lg btn-block btn-danger" style="margin-top:45px;font-size:20px; color:floralwhite; font-weight: bold;"> <span> SUBMIT </span> </button> </div>
     </form>
     <div class="resend-otp"><a class="btn btn-info btn-large btn-block" href="<%='/users/resendOTP/' + email%>">RESEND OTP</a></div>
   </div>
</div>
<% include partials/footer %>
